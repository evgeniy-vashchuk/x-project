{
  "name": "x-project",
  "version": "3.0.0",
  "description": "Starter kit for fast HTML / CSS / JS pages layout based on Gulp",
  "keywords": [
    "gulp",
    "starter-kit",
    "templating",
    "boilerplate",
    "bootstrap",
    "fontawesome",
    "tiny-slider",
    "jquery"
  ],
  "author": {
    "name": "Evgeniy Vashchuk",
    "email": "evgeniy.vashchuk.mail@gmail.com",
    "url": "https://evgeniy-vashchuk.github.io/"
  },
  "bugs": {
    "url": "https://github.com/evgeniy-vashchuk/x-project/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evgeniy-vashchuk/x-project.git"
  },
  "type": "module",
  "scripts": {
    "puglint": "npx pug-lint 'src/pug'",
    "stylelint": "npx stylelint 'src/scss/**/*{.css,.scss}'",
    "stylelint:fix": "npx stylelint 'src/scss/**/*{.css,.scss}' --fix",
    "jslint": "npx eslint '**/*.js'",
    "jslint:fix": "npx eslint '**/*.js' --fix",
    "htmllint": "npx eslint 'src/*.html'",
    "htmllint:fix": "npx eslint 'src/*.html' --fix",
    "editorlint": "npx editorconfig-checker",
    "lint": "npm run puglint && npm run stylelint && npm run jslint && npm run htmllint && npm run editorlint",
    "prepare": "git config core.hooksPath .git-hooks || echo 'Not in a git repo'"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/register": "^7.24.6",
    "@eslint/js": "^9.11.1",
    "@html-eslint/eslint-plugin": "^0.27.0",
    "@html-eslint/parser": "^0.27.0",
    "@prettier/plugin-pug": "^3.1.0",
    "@stylistic/eslint-plugin-js": "^2.8.0",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.3",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^7.0.6",
    "del": "^6.0.0",
    "editorconfig-checker": "^6.0.0",
    "emitty": "^1.4.0",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-dest-clean": "^0.5.0",
    "gulp-format-html": "2.0.0",
    "gulp-gitignore": "^0.1.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.0.1",
    "gulp-include": "^2.4.1",
    "gulp-load-plugins": "^2.0.8",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-pug": "^5.0.0",
    "gulp-real-favicon": "^0.3.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass": "^5.1.0",
    "gulp-sass-glob": "^1.1.0",
    "gulp-strip-comments": "^2.6.0",
    "gulp-terser": "^2.1.0",
    "gulp-zip": "^6.0.0",
    "npm-check-updates": "^17.1.3",
    "postcss-discard-comments": "^7.0.3",
    "prettier": "^3.3.3",
    "pug-include-glob": "^0.4.3",
    "pug-lint": "^2.7.0",
    "sass": "1.77.6",
    "sort-css-media-queries": "^2.4.0",
    "stylelint": "^16.9.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.2",
    "stylelint-scss": "^6.7.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.6.0",
    "bootstrap": "^5.3.3",
    "jquery": "^3.7.1",
    "tiny-slider": "^2.9.4"
  }
}
