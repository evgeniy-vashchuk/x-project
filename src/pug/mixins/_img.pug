mixin img(obj)
  if (obj.img)
    if (obj.lazy !== false)
      img(class="lazy js-lazy" src="img/lazy-placeholder.png" alt=obj.alt ? obj.alt : "Image" data-src=obj.img)&attributes(attributes)
    else
      img(src=obj.img alt=obj.alt ? obj.alt : "Image")&attributes(attributes)
