{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "checkJs": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/js/components/*"],
      "@utils/*": ["src/js/utils/*"],
      "@constants/*": ["src/js/utils/constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
